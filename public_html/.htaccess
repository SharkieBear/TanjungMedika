# Aktifkan mod_rewrite
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Jika request bukan direktori atau file fisik
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-f

  # Tambahkan .php jika URL tanpa ekstensi (misal: /admin-dashboard â†’ admin-dashboard.php)
  RewriteRule ^([^/.]+)$ $1.php [L]
</IfModule>

# Caching untuk file statis
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/manifest+json "access plus 1 week"
</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(jpg|jpeg|png|gif|css|js|json)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>

# Pastikan file sw.js bisa diakses
<Files "sw.js">
  SetHandler default-handler
</Files>

<IfModule mod_headers.c>
  <FilesMatch "sw.js">
    Header set Service-Worker-Allowed "/"
  </FilesMatch>
</IfModule>
